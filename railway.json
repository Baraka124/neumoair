{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Building NeumoCalc PWA'"
  },
  "deploy": {
    "startCommand": "nginx -g 'daemon off;'",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  },
  "ingress": {
    "routes": [
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/app/$1",
        "continue": true
      }
    ],
    "rewrites": [
      {
        "source": "/*",
        "destination": "/index.html"
      }
    ]
  }
}
